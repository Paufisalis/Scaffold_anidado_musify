<h1>Playlists</h1>
<br>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">User</th>
        <th scope="col">Playlist</th>
        <th scope="col"></th>
      </tr>
    </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.user.name %></td>
        <td><%= playlist.songs.count %></td>
        <td><%= link_to 'Show', playlist, class:"btn btn-success" %>
        <%= link_to 'Edit', edit_playlist_path(playlist), class:"btn btn-primary" %>
        <%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning" %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

