<h1>Users</h1>
<br>
<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Playlist</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.playlists.count %></td>
        <td><%= link_to 'Show', user, class:"btn btn-success"%>
        <%= link_to 'Edit', edit_user_path(user), class:"btn btn-primary"%>
        <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

